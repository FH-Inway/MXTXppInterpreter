						<Source><![CDATA[
        /// <summary>
        ///
        /// </summary>
        /// <returns></returns>
        public str getContextMenuOptions()
        {
            str ret;
            int idx;
            ContextMenu menu = new ContextMenu();
            ret = super();
            
            idx = this.getSelection();

            if(idx)
            {
                Tree.select(idx);
                List menuOptions = new List(Types::Class);

                menuOptions.addEnd(ContextMenuOption::Create("Add dependency", CONTEXTMENU_CREATE));

                if (idx != FormTreeAdd::Root)
                {
                    menuOptions.addEnd(ContextMenuOption::Create("Delete dependency", CONTEXTMENU_DELETE));
                }

                menu.ContextMenuOptions(menuOptions);
            }

            menu.OverrideSystemMenu(true);

            return menu.Serialize();
        }

]]></Source>
