			<Method>
				<Name>init</Name>
				<Source><![CDATA[
    /// <summary>
    ///
    /// </summary>
    public void init()
    {
        if (this.args().dataset() == tableNum(MXTXppInterpreterScript))
        {
            callerScript = this.args().record();
        }

        super();

        this.buildDependencyTree();
    }

]]></Source>
			</Method>
			<Method>
				<Name>buildDependencyTree</Name>
				<Source><![CDATA[
    private void buildDependencyTree()
    {
        var itemIdx = SysFormTreeControl::addTreeItem(
            Tree, 
            strFmt("%1 - %2", callerScript.Description, callerScript.RecId), 
            FormTreeAdd::Root, 
            callerScript.RecId);

        Tree.getItem(itemIdx).stateBold(true);

        this.addNodes(itemIdx, callerScript.RecId);
    }

]]></Source>
			</Method>
			<Method>
				<Name>addNodes</Name>
				<Source><![CDATA[
    private void addNodes(TreeItemIdx _parentItemIdx, RecId _parentScriptId)
    {
        MXTXppInterpreterScriptDependency dependency;
        MXTXppInterpreterScript           script;

        while select dependency
            where dependency.ScriptId == _parentScriptId
        join script
            where script.RecId == dependency.ReferenceScriptId
        {
            var itemIdx = SysFormTreeControl::addTreeItem(
                Tree,
                strFmt("%1 - %2", script.Description, script.RecId),
                _parentItemIdx, 
                script.RecId);

            this.addNodes(itemIdx, script.RecId);
        }

        SysFormTreeControl::expandTree(Tree, _parentItemIdx);
    }

]]></Source>
